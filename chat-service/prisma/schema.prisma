generator client {
  provider   = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conversation {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  lastMessageAt DateTime @default(now())

  messages     Message[]
  participants Participant[]
}

model Participant {
  id             String       @id @default(cuid())
  userId         String
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  joinedAt   DateTime @default(now())
  lastReadAt DateTime @default(now())

  @@unique([userId, conversationId])
  @@index([userId])
}

model Message {
  id             String        @id @default(cuid())
  conversationId String
  senderId       String
  content        String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  
  // Idempotency key for deduplication
  dedupeId       String?       @unique
  
  // Message status tracking for delivery acknowledgments
  status         MessageStatus @default(SENT)
  deliveredAt    DateTime?
  readAt         DateTime?
  
  // Media support
  type           MessageType   @default(TEXT)
  mediaUrl       String?       // URL from Cloudflare R2
  mediaId        String?       // Reference to media-service ID
  mediaMimeType  String?
  mediaSize      Int?          // Size in bytes
  mediaName      String?       // Original filename
  mediaDuration  Int?          // Duration in seconds (audio/video)

  // Refactored fields
  isForwarded      Boolean  @default(false)
  forwardedFrom    String?
  replyToId        String?
  formattedContent String?
  isStarred        Boolean  @default(false)
  deletedForAll    Boolean  @default(false)
  deletedFor       String[]

  replyTo      Message?     @relation("MessageToMessage", fields: [replyToId], references: [id])
  replies      Message[]    @relation("MessageToMessage")
  reactions    MessageReaction[]
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([conversationId, status])
}

enum MessageStatus {
  SENDING   // Client-side only (optimistic)
  SENT      // Persisted in DB
  DELIVERED // Recipient acknowledged
  READ      // Recipient marked as read
  FAILED    // Send failed
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  AUDIO
  FILE
  STICKER
}

model ChatInteraction {
  id                String   @id @default(uuid()) @db.Uuid
  userId            String   @map("user_id") @db.VarChar(255)
  partnerId         String   @map("partner_id") @db.VarChar(255)
  lastMessageAt     DateTime @default(now()) @map("last_message_at") @db.Timestamp()
  messageCount      Int      @default(1) @map("message_count")
  userSentCount     Int      @default(0) @map("user_sent_count")
  partnerSentCount  Int      @default(0) @map("partner_sent_count")
  responseRate      Decimal  @default(0.00) @map("response_rate") @db.Decimal(3, 2)
  createdAt         DateTime @default(now()) @map("created_at") @db.Timestamp()
  updatedAt         DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp()
  @@unique([userId, partnerId], map: "chat_interactions_user_partner_unique")
  @@index([userId], map: "idx_chat_interactions_user_id")
  @@index([partnerId], map: "idx_chat_interactions_partner_id")
  @@index([userId, lastMessageAt(sort: Desc)], map: "idx_chat_interactions_last_message")
  @@map("chat_interactions")
}


model MessageReaction {
  id        String   @id @default(cuid())
  messageId String
  userId    String
  emoji     String
  createdAt DateTime @default(now())

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId, emoji])
  @@index([messageId])
}


